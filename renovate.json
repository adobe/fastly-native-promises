{
  "extends": [
    "config:recommended",
    "schedule:earlyMondays",
    ":semanticCommits"
  ],
  "timezone": "Europe/Zurich",
  "packageRules": [
    {
      "matchPackageNames": [
        "cimg/node"
      ],
      "allowedVersions": "<15"
    },
    {
      "matchPackagePatterns": [
        "^@adobe/"
      ],
      "groupName": "@adobe",
      "automerge": true,
      "major": {
        "automerge": false
      },
      "schedule": [
        "at any time"
      ]
    },
    {
      "matchPackagePatterns": [
        "^.+"
      ],
      "excludePackagePatterns": [
        "^@adobe/"
      ],
      "groupName": "external",
      "patch": {
        "automerge": true
      }
    }
  ],
  "includeForks": true
}
